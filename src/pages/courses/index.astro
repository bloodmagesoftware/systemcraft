---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const courses = await getCollection("courses");
---

<Layout>
	<h1>Courses</h1>

	<ul>
		{
			courses.map((course) => (
				<li>
					<a href={`/courses/${course.slug}`}>{course.data.title}</a>
				</li>
			))
		}
	</ul>
</Layout>
